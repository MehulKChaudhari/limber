<SelectLight
  @onChange={{this.select}}
  class="
    text-black focus:ring-4 sm:text-sm focus-visible:outline-none focus:outline-none ring-inset
    rounded-sm px-2 py-1
  "
  data-test-demo-select
  ...attributes
>
  <option value="" disabled selected>Select demo</option>

  {{#each this.demos as |demo|}}
    <option data-test-demo>{{demo}}</option>
  {{/each}}
</SelectLight>

