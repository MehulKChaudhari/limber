{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "predeploy": "yarn build && yarn workspace limber build",
    "build": "yarn turbo run build --scope='@nullvoxpopuli/*'",
    "lint:fix": "yarn turbo run lint:fix",
    "start": "yarn turbo run start --scope='limber' --include-dependencies"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "dev": {
        "dependsOn": [
          "^dev"
        ]
      },
      "start": {
        "dependsOn": [
          "^build"
        ],
        "cache": false
      },
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {},
      "lint:fix": {},
      "test": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17",
    "npm": "8.1.3"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "turbo": "^1.0.28"
  },
  "resolutions": {
    "ember-auto-import": "^2.3.0",
    "@ember/render-modifiers": "2.0.3",
    "@embroider/addon-shim": "1.0.0",
    "@embroider/core": "1.0.0",
    "@embroider/util": "1.0.0"
  }
}
