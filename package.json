{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "build": "npm-run-all --aggregate-output --parallel 'build:*'",
    "build:horizon": "cd packages/horizon && yarn build",
    "build:monaco": "cd packages/monaco && node build.js",
    "build:codemirror": "cd packages/codemirror && node build.js",
    "start": "yarn build && ( cd frontend && yarn start )"
  },
  "volta": {
    "node": "14.16.0",
    "yarn": "1.22.10",
    "npm": "7.11.1"
  }
}
