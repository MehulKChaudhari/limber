{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "prepare": "node patch-packages.js",
    "predeploy": "yarn build && yarn workspace limber build",
    "build": "concurrently \"npm:build:*\"",
    "build:horizon": "yarn workspace @nullvoxpopuli/horizon-theme build",
    "build:monaco": "yarn workspace @nullvoxpopuli/limber-codemirror build",
    "build:codemirror": "yarn workspace @nullvoxpopuli/limber-monaco build",
    "build:styles": "yarn workspace @nullvoxpopuli/limber-styles build",
    "lint:fix": "concurrently \"npm:lint:*:fix\"",
    "lint:horizon:fix": "yarn workspace @nullvoxpopuli/horizon-theme lint:fix",
    "lint:monaco:fix": "yarn workspace @nullvoxpopuli/limber-codemirror lint:fix",
    "lint:codemirror:fix": "yarn workspace @nullvoxpopuli/limber-monaco lint:fix",
    "lint:transpilation:fix": "yarn workspace @nullvoxpopuli/limber-transpilation lint:fix",
    "lint:frontend:fix": "yarn workspace limber lint:fix",
    "start": "yarn workspace limber start",
    "start:prod": "MINIFY=false yarn start --environment=production"
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17",
    "npm": "8.1.3"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  },
  "resolutions": {
    "ember-auto-import": "^2.3.0",
    "@ember/render-modifiers": "2.0.3",
    "@embroider/addon-shim": "0.50.2",
    "@embroider/macros": "0.50.2",
    "@embroider/core": "0.50.2",
    "@embroider/util": "0.50.2"
  }
}
