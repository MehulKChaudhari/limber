{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "build": "npm-run-all --aggregate-output --parallel 'build:*'",
    "build:horizon": "yarn workspace @nullvoxpopuli/horizon-theme build",
    "build:monaco": "yarn workspace @nullvoxpopuli/limber-codemirror build",
    "build:codemirror": "yarn workspace @nullvoxpopuli/limber-monaco build",
    "start": "yarn workspace limber start"
  },
  "dependencies": {
    "@nullvoxpopuli/eslint-configs": "1.2.5",
    "eslint": "^7.25.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "yarn eslint --fix --quiet --cache",
    "*.hbs": "yarn ember-template-lint --fix"
  },
  "resolutions": {
    "@types/webpack": "^5.28.0",
    "webpack": "^5.36.2"
  },
  "volta": {
    "node": "14.16.1",
    "yarn": "1.22.10",
    "npm": "7.11.1"
  }
}
