{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*",
    "tests"
  ],
  "scripts": {
    "predeploy": "turbo run build --filter=limber",
    "build": "turbo run build --filter=limber^...",
    "lint": "pnpm --filter='*' lint",
    "lint:fix": "turbo run lint:fix",
    "start": "turbo run start --filter=limber"
  },
  "volta": {
    "node": "16.16.0",
    "yarn": "1.22.19",
    "npm": "8.12.1"
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "turbo": "^1.6.3"
  },
  "packageManager": "pnpm@7.5.0",
  "pnpm": {
    "overrides": {
      "@babel/core": "~7.18.0",
      "ember-auto-import": "^2.4.0",
      "ember-modifier": "^4.0.0-beta.1",
      "ember-source": "^4.5.0",
      "@ember/render-modifiers": "^2.0.4",
      "@types/eslint": "^7.0.0"
    },
    "allowedDeprecatedVersions": {
      "babel-eslint": "^10.0.0",
      "source-map-url": "^0.3.0",
      "core-js": "^2.0.0"
    },
    "peerDependencyRules": {
      "allowAny": [
        "mustache",
        "ember-modifier"
      ]
    },
    "notes": {
      "mustache": "ember-cli -> testem -> consolidate -> mustache is ancient"
    },
    "patchedDependencies": {
      "ember-on-resize-modifier@1.1.0": "patches/ember-on-resize-modifier@1.1.0.patch"
    }
  }
}
