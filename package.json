{
  "name": "limber-monorepo",
  "private": true,
  "author": "NullVoxPopuli",
  "workspaces": [
    "frontend",
    "packages/*",
    "tests"
  ],
  "resolutions": {
    "tracked-built-ins": "github:NullVoxPopuli/tracked-built-ins#tracked-storage",
    "tracked-maps-and-sets": "3.0.2"
  },
  "scripts": {
    "predeploy": "yarn build && yarn workspace limber build",
    "build": "yarn turbo run build --scope='@nullvoxpopuli/*'",
    "lint:fix": "yarn turbo run lint:fix",
    "dev": "yarn turbo run dev --scope='limber' --include-dependencies"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "dev": {
        "dependsOn": [
          "^dev"
        ]
      },
      "start": {
        "dependsOn": [
          "^build"
        ],
        "cache": false
      },
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {},
      "lint:fix": {},
      "test": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17",
    "npm": "8.1.3"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "npm-run-all": "^4.1.5",
    "turbo": "^1.0.28"
  }
}
