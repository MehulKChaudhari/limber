{
  "extends": "@tsconfig/ember/tsconfig.json",
  "glint": {
    "environment": ["ember-loose", "ember-template-imports"]
  },
  "compilerOptions": {
    "paths": {
      "ember-repl": ["../addon/dist/browser/index.d.ts"],
      "ember-repl/*": ["../addon/dist/browser/*"],
      "test-app/tests/*": ["./tests/*"],
      "test-app/*": ["./app/*"],
      "*": ["./types/*"]
    }
  },
  "include": ["./app/**/*", "./tests/**/*", "./types/**/*"]
}
