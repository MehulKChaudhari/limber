{
  "name": "@nullvoxpopuli/limber-codemirror",
  "version": "0.0.0",
  "description": "custom build of codemirror for use in Limber",
  "type": "module",
  "exports": {
    "./broccoli-funnel": {
      "require": "./broccoli-funnel.cjs"
    }
  },
  "author": "NullVoxPopuli",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "node build.cjs",
    "dev": "pnpm build --watch",
    "lint:types": "tsc --noEmit",
    "lint:prettier:fix": "prettier --no-error-on-unmatched-pattern --cache --cache-strategy content -w **/*.{js,ts,gjs,gts,hbs,css}",
    "lint:prettier": "prettier --no-error-on-unmatched-pattern -c **/*.{js,ts,gjs,gts,hbs,css}",
    "lint:fix": "concurrently 'npm:lint:*:fix' --names 'fix:'",
    "lint:js": "eslint . --cache --cache-strategy content",
    "lint:js:fix": "eslint . --fix",
    "lint": "pnpm turbo lint --output-logs errors-only"
  },
  "browser": {
    "path": "path-browserify"
  },
  "dependencies": {
    "@codemirror/autocomplete": "6.6.0",
    "@codemirror/commands": "6.2.3",
    "@codemirror/lang-html": "^6.4.3",
    "@codemirror/lang-javascript": "6.1.7",
    "@codemirror/lang-markdown": "6.1.1",
    "@codemirror/language": "^6.6.0",
    "@codemirror/language-data": "^6.3.0",
    "@codemirror/lint": "^6.2.1",
    "@codemirror/search": "6.4.0",
    "@codemirror/state": "6.2.0",
    "@codemirror/view": "6.10.0",
    "@lezer/highlight": "^1.1.4",
    "@lezer/html": "^1.3.4",
    "@lezer/markdown": "^1.0.2",
    "@nullvoxpopuli/horizon-theme": "*",
    "assert": "^2.0.0",
    "broccoli-funnel": "^3.0.8",
    "codemirror": "^6.0.1",
    "codemirror-languageserver": "^1.11.0",
    "eslint4b": "^7.32.0",
    "path-browserify": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@nullvoxpopuli/eslint-configs": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "concurrently": "^8.0.1",
    "esbuild": "0.17.18",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.39.0",
    "prettier": "^2.8.8",
    "recursive-copy": "^2.0.14",
    "typescript": "^5.0.4",
    "prettier-plugin-ember-template-tag": "latest"
  },
  "engines": {
    "node": ">= v16"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
