{{#let (service 'editor') as |context|}}
  {{#if this.isEditing}}
    <div
      {{monaco context.text context.updateText}}
      class="font-sm font-mono bg-gray-800 text-white max-h-full resize-x border border-gray-900"
      {{!-- template-lint-disable no-inline-styles --}}
      style="width: calc(40vw - 16px)"
    >{{context.text}}</div>
  {{else}}
    <textarea
      {{on 'click' this.handleClick}}
      readonly
      spellcheck="false"
      class="px-6 py-2 font-sm font-mono bg-gray-800 text-white max-h-full resize-x border border-gray-900"
      {{!-- template-lint-disable no-inline-styles --}}
      style="width: calc(40vw - 16px)"
    >{{context.text}}</textarea>
  {{/if}}
{{/let}}