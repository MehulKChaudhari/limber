{{#let (service 'editor') as |context|}}
  {{#if this.isEditing}}
    <div
      {{monaco context.text context.updateText}}
      class="
        font-sm font-mono bg-gray-800 text-white max-h-full resize-x
        border border-gray-900
      "
    >{{context.text}}</div>
  {{else}}
    <textarea
      {{this.waitForUser}}
      readonly
      spellcheck="false"
      class="
        px-6 py-2 max-h-full resize-x
        font-sm font-mono bg-gray-800 text-white
        border border-gray-900"
    >{{context.text}}</textarea>
  {{/if}}
{{/let}}